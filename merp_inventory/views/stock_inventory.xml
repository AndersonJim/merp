<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">stock.inventory.form</field>
        <field name="model">stock.inventory</field>
        <field name="inherit_id" ref="stock.view_inventory_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <attribute name="statusbar_visible">draft,confirm,ready,done</attribute>
            </xpath>

            <xpath expr="//field[@name='date']" position="after">
                <field name="validate_inventory_adjustments" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='prepare_inventory']" position="after">
                <button name="finish_inventory" type="object" groups="stock.group_stock_user"
                    string="Finish Inventory"
                    attrs="{'invisible': ['|', ('validate_inventory_adjustments', '=', False), ('state', 'not in', 'confirm')]}" />
                <button name="return_inventory" type="object" groups="stock.group_stock_user"
                    string="Return to In Progress"
                    attrs="{'invisible': ['|', ('validate_inventory_adjustments','=',False), ('state', 'not in', 'ready')]}" />
            </xpath>

            <xpath expr="//button[@name='action_done']" position="attributes">
                <attribute name="states">confirm,ready</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel_draft']" position="attributes">
                <attribute name="states">confirm,ready</attribute>
            </xpath>
            <!--
            <xpath expr="//button[@name='action_inventory_line_tree']" position="attributes">
                <attribute name="states">confirm,ready</attribute>
            </xpath>
             -->

            <xpath expr="//field[@name='line_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('done', 'ready'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='move_ids']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('done', 'ready'))]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>
