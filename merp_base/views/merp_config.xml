<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_merp_config_settings" model="ir.ui.view">
            <field name="name">Ventor Settings</field>
            <field name="model">merp.config.settings</field>
            <field name="arch" type="xml">
                <form string="Ventor/mERP Settings" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                </form>
            </field>
        </record>

        <record id="action_merp_config_settings" model="ir.actions.act_window">
            <field name="name">Ventor/mERP Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">merp.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="menu_merp_config_settings" name="Ventor/mERP Settings"
            parent="base.menu_administration" sequence="1"
            groups="base.group_system"
            action="action_merp_config_settings" />

    </data>
</odoo>
